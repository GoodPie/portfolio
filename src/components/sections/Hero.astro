---
import Section from "@/components/Section.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import BookIcon from "@/components/icons/BookIcon.astro";
---

<Section class="min-h-[80vh] flex flex-col justify-center">
  <div class="max-w-4xl">
    <p class="text-sm tracking-widest text-muted-foreground uppercase mb-4">
      Software Engineer
    </p>

    <h1 class="text-5xl md:text-7xl lg:text-8xl font-serif font-medium tracking-tight mb-6">
      Brandyn Britton<span class="text-teal">.</span>
    </h1>

    <p class="text-xl md:text-2xl text-muted-foreground leading-relaxed max-w-2xl mb-12">
      I build <em class="font-serif text-foreground not-italic">user-focused applications</em> in{" "}
      <em class="font-serif text-foreground not-italic">healthcare and education</em>.
    </p>

    <div class="flex items-center gap-6">
      <SocialLinks />
      <span class="text-muted-foreground/30">/</span>
      <a
        href="/blog"
        class="flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors text-sm"
      >
        <BookIcon size={16} />
        Blog
      </a>
    </div>
  </div>
</Section>
